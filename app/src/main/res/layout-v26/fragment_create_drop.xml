<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/fragment_create_drop"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/primaryLightColor"
                                                   android:orientation="vertical"
                                                   style="@style/DropTheme.NoTitleActivity">


    <EditText
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/create_drop_text"
            android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="124dp"
            android:importantForAutofill="no"
            android:minLines="2"
            app:layout_constraintTop_toBottomOf="@+id/create_drop_heading"
            android:inputType="textCapSentences|textMultiLine"/>

    <Button
            android:text="@string/create_drop_submit"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:id="@+id/create_drop_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:text="@string/create_drop_heading"
            android:ems="10"
            android:id="@+id/create_drop_heading"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="118dp"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAutofill="no"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="53dp"
            android:layout_height="16dp"
            android:text="@string/create_drop_text_label"
            android:ems="10"
            android:id="@+id/create_drop_text_label"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:importantForAutofill="no"
            android:labelFor="@+id/create_drop_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/create_drop_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>